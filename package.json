{
  "name": "ghost-hand",
  "version": "1.0.8",
  "description": "Ghost Hand - An AI-powered text assistant",
  "main": "main/main.js",
  "scripts": {
    "start": "NODE_ENV=development webpack && electron .",
    "dev": "NODE_ENV=development nodemon --watch src --exec 'webpack && electron .'",
    "build": "NODE_ENV=production webpack && npx electron-builder",
    "compile": "NODE_ENV=production webpack && electron-builder --dir",
    "release": "NODE_ENV=production webpack && electron-builder --publish always"
  },
  "keywords": [
    "ghost hand",
    "ai",
    "text assistant"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-clipboard-extended": "^x.x.x",
    "html-webpack-plugin": "^5.6.0",
    "menubar": "^9.5.0",
    "openai": "^4.63.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@electron/notarize": "^2.3.2",
    "babel-loader": "^9.2.1",
    "electron": "^x.x.x",
    "electron-builder": "^24.6.3",
    "electron-reloader": "^1.2.3",
    "version-bump-prompt": "^6.1.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.yourcompany.ghost-hand",
    "productName": "Ghost Hand",
    "files": [
      "dist/**/*",
      "main/**/*",
      "package.json",
      "assets/**/*",
      "utils/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "identity": "Strive Games Inc (RCJS4748VY)",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "signIgnore": [
        "node_modules/*"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "icon": "assets/icon.png",
    "publish": [
      {
        "provider": "github",
        "owner": "Niravpatel129",
        "repo": "ghost-hand",
        "releaseType": "release",
        "publishAutoUpdate": true
      }
    ],
    "afterSign": "scripts/notarize.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Niravpatel129/ghost-hand.git"
  }
}
